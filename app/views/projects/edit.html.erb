<%= link_to 'Back', url:projects_path, method: :get class: 'btn btn-secondary mb-3' %>
<div class='card'>
  <div class="card-body">
    <h2 class = 'card-title mb-4'>
      <span>プロジェクトを編集<span>
    </h2>

<%= form_with model:@project,  url: project_path, method: :put, local: true do |form| %>

  <div class="form-group">
    <%= form.label "プロジェクト名",:name %>
    プロジェクト名
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label '内容', :description %>
    <%= form.text_area :description , class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= form.label 'タグ', :title %>
    <%= form.text_area :title , class: 'form-control'%>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary'%>
  </div>


<% end %>
  </div>
</div>
